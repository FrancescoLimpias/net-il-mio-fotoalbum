@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="dropdown-item">
            <a id="manage" class="nav-link text-dark d-block w-100 text-center" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Ciao @UserManager.GetUserName(User)!</a>
        </li>
        <li class="dropdown-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn d-block w-100">Esci</button>
            </form>
        </li>
    }
    else
    {
        <li class="dropdown-item">
            <a class="nav-link text-dark  d-block w-100 text-center" id="register" asp-area="Identity" asp-page="/Account/Register">Registrati</a>
        </li>
        <li class="dropdown-item">
            <a class="nav-link text-dark  d-block w-100 text-center" id="login" asp-area="Identity" asp-page="/Account/Login">Accedi</a>
        </li>
    }
</ul>
